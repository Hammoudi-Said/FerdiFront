# FERDI Application Environment Configuration

# Backend Configuration
# Change this to your local FastAPI backend URL
NEXT_PUBLIC_BASE_URL=http://localhost:8000

# Development Mode
# Set to true to use mock data instead of real backend
NEXT_PUBLIC_USE_MOCK_DATA=false

# Database Configuration (optional for frontend)
MONGO_URL=mongodb://localhost:27017
DB_NAME=ferdi_database

# Application Environment
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_ENV=development